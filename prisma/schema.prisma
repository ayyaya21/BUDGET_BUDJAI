datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

generator client {
    provider  = "prisma-client-py"
    interface = "asyncio"
}

model Budget {
    id      Int   @id @default(autoincrement())
    balance Float
}

model Transaction {
    id        Int             @id @default(autoincrement())
    name      String
    money     Float
    type      TransactionType
    createdAt DateTime        @default(now())
}

enum TransactionType {
    EXPENSE
    INCOME
}
